{
	"$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noAssignInExpressions": "off",
				"noExplicitAny": "warn",
				"noExtraNonNullAssertion": "off"
			},
			"nursery": {
				"noUnusedImports": "warn"
			},
			"style": {
				"noNonNullAssertion": "off"
			}
		}
	},
	"formatter": {
		"enabled": true
	},
	"files": {
		"include": [
			"src/",
			"package.json",
			"biome.json",
			"nuxt.config.ts",
			"graphql/"
		],
		"ignore": ["graphql/", ".nuxt/"]
	}
}
