{
	"$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"json": {
    "parser": {
      "allowComments": true
    }
  },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noAssignInExpressions": "off",
				"noExplicitAny": "off",
				"noExtraNonNullAssertion": "off"
			},
			"nursery": {
				"noUnusedImports": "warn",
				"noImplicitAnyLet": "off"
			},
			"style": {
				"noNonNullAssertion": "off"
			}
		}
	},
	"formatter": {
		"enabled": true
	},
	"files": {
		"include": [
			"src/",
			"package.json",
			"biome.json",
			"nuxt.config.ts",
			"graphql/"
		],
		"ignore": ["graphql/", ".nuxt/", "biome.json"]
	}
}
